{
  "template" : "logstash-*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "dynamic_templates" : [ {
        "message_field" : {
          "match" : "message",
          "match_mapping_type" : "text",
          "mapping" : {
            "type" : "text", 
            "norms" : false }
          }
        }, {
        "text_fields" : {
          "match" : "*",
          "match_mapping_type" : "text",
          "mapping" : {
            "type" : "text", 
            "norms" : false,
            "fields" : {
              "raw" : { "type": "keyword", "ignore_above" : 256}
            }
          }
        }
      } ],
      "properties" : {
        "@timestamp": { "type": "date" },
        "@version": { "type": "keyword" },
        "geoip"  : {
          "type" : "object",
          "dynamic": true,
          "properties" : {
            "ip": { "type": "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "float" },
            "longitude" : { "type" : "float" }
          }
        }
      }
    }
  }
}
